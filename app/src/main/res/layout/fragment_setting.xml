<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackdroundSetting"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/press_state">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_item"
            android:text="@string/study_remainder_setting"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/font_size_setting" />

        <Switch
            android:id="@+id/switchStudyReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="@dimen/padding_item" />

        <TextView
            android:id="@+id/txtTimeRemind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="fill_vertical|center_horizontal"
            android:text="11:16"
            android:textColor="@android:color/background_light" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/share_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/press_state">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_item"
            android:text="@string/share_app"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/font_size_setting" />


    </LinearLayout>
</LinearLayout>